{% trans_default_domain 'MyProfile' %}
<section id="contact" class="contact-section section-padding">
    <div class="container">
        <h2 class="section-title wow fadeInUp">{{ 'navegation.contact' | trans }}</h2>

        <div class="row">
            <div class="col-md-12">
                <div class="contact-form">
                    <strong>{{ 'default.send_me_message' | trans }}</strong>

                    {% form_theme formContact 'bootstrap_4_layout.html.twig' %}
                    {{ form_start(formContact) }}

                        <div class="form-group">
                            <label for="name">Nome</label>
                            {{ form_widget(formContact.name) }}
                            {{ form_errors(formContact.name) }}
                        </div>

                        <div class="form-group">
                            <label for="email">E-mail</label>
                            {{ form_widget(formContact.email) }}
                            {{ form_errors(formContact.email) }}
                        </div>

                        <div class="form-group">
                            <label for="subject">Assunto</label>
                            {{ form_widget(formContact.subject) }}
                            {{ form_errors(formContact.subject) }}
                        </div>

                        <div class="form-group">
                            <label for="message">Mensagem</label>
                            {{ form_widget(formContact.message) }}
                            {{ form_errors(formContact.message) }}
                        </div>

                        <button type="submit" name="submit" class="btn btn-primary"><i class="fa fa-paper-plane" aria-hidden="true"></i> {{ 'default.send_message' | trans }}</button>
                    {{ form_end(formContact) }}

                </div><!-- /.contact-form -->
            </div><!-- /.col-md-6 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section><!-- End Contact Section -->